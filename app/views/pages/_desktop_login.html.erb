<div class="background_desktop" style="height:130vh!important">
    <div class="blink_header_desktop">
      <h1>BLINK <%= image_tag("logo-blink.svg", height:"33.6", width:"102.19", alt:"vector") %></h1>
    </div>

    <div class="motto_desktop">
      <h3>Show your eyes <br> some love</h3>
    </div>

  <div class="desktop_header_links">

      <div class="title-underlined mr-4">
        <%= link_to "SIGN UP", new_user_registration_path, class: "title" %>
      </div>

      <div class="title-underlined">
        <%= link_to "LOGIN", new_user_session_path, class: "title" %>
      </div>

  </div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs container" id="loginFormDesktop">
    <%= f.input :email,
                label: false,
                required: false,
                input_html: { autocomplete: "email", placeholder: 'EMAIL' } %>
    <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", placeholder: 'PASSWORD' } %>
                <br><br>
    <div style="margin: 0 27% -25% 27%">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>
<div class="text-center" style="margin: -25% 0 25% 0">
  <div class="form-actions desk-button button btn btn-outline-success mb-5 text-center">
    <%= f.button :submit, "LOG IN", class: "orange-text" %>
  </div>
</div>
<% end %>
