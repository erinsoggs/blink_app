<%= render 'shared/mobilenavbar' %>

<h1>Pages#Dashboard on mobile</h1>
<p>Find me in app/views/pages/mobile_dashboard.html.erb</p>

<h2>Daily Routines!</h2>

<div class="routine-morning">

  <h3>Morning routine</h3>

  <% if @routine_morning %>

    <ul>
      <li><%= @routine_morning.exercise.title %></li>
      <li><%= @routine_morning.completed %></li>
      <li><%= @routine_morning.duration %></li>
    </ul>
    <div id="completed-morning"><%= @routine_morning.completed %></div>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"
            onclick="window.fillInModalMorningExercise('<%= @routine_morning.exercise.title %>','<%= @routine_morning.exercise.directions %>','<%= @routine_morning.duration %>')">
      Open
    </button>

  <% else %>
    <p>No routine, sorry!</p>
  <% end %>

</div>


<div class="routine-nigth">

  <h3>Night routine</h3>

  <% if @routine_night %>

    <ul>
      <li><%= @routine_night.exercise.title %></li>
      <li><%= @routine_night.completed %></li>
      <li><%= @routine_night.duration %></li>
    </ul>
    <div id="completed-night"><%= @routine_night.completed %></div>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"
            onclick="window.fillInModalNightExercise('<%= @routine_night.exercise.title %>','<%= @routine_night.exercise.directions %>', '<%= @routine_morning.duration %>')">
      Open
    </button>

  <% else %>
    <p>No routine, sorry!</p>
  <% end %>


</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <h2 id="title-in-modal"></h2>
      <p id="summary-in-modal"></p>
      <ul id="directions-list-in-modal">
      </ul>
      <div class="clickable" id="timer"></div>
    </div>
  </div>
  <div class="footer">
  </div>
</div>
