<div style="width: 100vw; height: 100vh; background-image: url(<%= asset_url 'backgrounds/carousellogin.svg' %>)">

  <div class="container">

    <%= render 'shared/banner_mobile' %>
<br>
<br>
    <div class="mb-5" style="width: 168px; height: 147px; background-image: url(<%= asset_url 'vectors/journalstats.svg' %>)"></div>

    <div id="board" data-city="<%= current_user.city %>">

      <div class="computer-time">
        <% if @computer_time %>

          <% nb_hrs = (@computer_time.minutes / 60).floor %>
          <% nb_min = @computer_time.minutes % 60 %>
          <p>Computer time:
            <span id="computer-time-hrs"><%= "#{nb_hrs}h" unless (nb_hrs.zero? && !nb_min.zero?) %></span><span id="computer-time-min"><%= "0" if (nb_min<10 && !nb_hrs.zero?) %><%= nb_min %><%= "min" if nb_hrs.zero? %></span>
          </p>

        <% else %>
          <p>Computer time: unavailable.</p>
        <% end %>
      </div>

      <div id="weather-temperature"></div>
      <img id="weather-icon">
      <div id="weather-description"></div>
      <div id="weather-humidity"></div>

    </div>

    <div class="routines">

      <div class="routine-morning">

        <h3>Your morning routine</h3>

        <% if @routine_morning %>

          <p><%= @routine_morning.exercise.title %> </p>
          <p id="completed-morning"><%= @routine_morning.completed ? "Completed" : "Not completed yet" %></p>

          <% exercise_asset_path = "sounds/#{@routine_morning.exercise.title.downcase.split().join('-')}-#{@routine_morning.repetition}.wav" %>
          <button type="button" class="btn btn-primary open-btn-modal-routine morning" data-toggle="modal" data-target="#exampleModal"
                  data-title='<%= @routine_morning.exercise.title %>' data-directions='<%= @routine_morning.exercise.directions %>' data-repetition='<%= @routine_morning.repetition %>'
                  data-sound="<%= asset_url(exercise_asset_path) %>">
            Open
          </button>

        <% else %>
          <p>No routine, sorry!</p>
        <% end %>

      </div>


      <div class="routine-nigth">

        <h3>Your night routine</h3>

        <% if @routine_night %>
          <p><%= @routine_night.exercise.title %> - <%= @routine_night.completed ? "Completed" : "Not completed yet" %></p>
          <p id="completed-night"><%= @routine_night.completed ? "Completed" : "Not completed yet" %></p>

          <% exercise_asset_path = "sounds/#{@routine_night.exercise.title.downcase.split().join('-')}-#{@routine_night.repetition}.wav" %>
          <button type="button" class="btn btn-primary open-btn-modal-routine night" data-toggle="modal" data-target="#exampleModal"
                  data-title='<%= @routine_night.exercise.title %>' data-directions='<%= @routine_night.exercise.directions %>' data-repetition='<%= @routine_night.repetition %>'
                  data-sound="<%= asset_url(exercise_asset_path) %>">
            Open
          </button>

        <% else %>
          <p>No routine, sorry!</p>
        <% end %>


      </div>


      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <h2 id="title-in-modal"></h2>
            <div id="play-btn-modal-div">
              <button class="btn btn-primary btn-lg">
                <i class='far fa-play-circle'></i>
              </button>
            </div>
            <ul id="directions-list-in-modal">
            </ul>
            <p>Nb of repetitions: <span id="repetition"></span> </p>
          </div>
        </div>
      </div>
    </div>


  </div>

  <%= render 'shared/navbar_footer' %>

</div>
