<%= render 'shared/banner_mobile' %>



<div class="routine-morning">

  <h3>Your morning routine</h3>

  <% if @routine_morning %>

    <p><%= @routine_night.exercise.title %> - <%= @routine_night.completed ? "Completed" : "Not completed yet" %></p>

    <button type="button" class="btn btn-primary open-btn-modal-routine" data-toggle="modal" data-target="#exampleModal"
            data-title='<%= @routine_morning.exercise.title %>' data-directions='<%= @routine_morning.exercise.directions %>' data-duration='<%= @routine_morning.duration %>'
            data-sound="<%= asset_url('sounds/exercise1.wav') %>">
      Open
    </button>

  <% else %>
    <p>No routine, sorry!</p>
  <% end %>

</div>


<div class="routine-nigth">

  <h3>Your night routine</h3>

  <% if @routine_night %>
    <p><%= @routine_night.exercise.title %> - <%= @routine_night.completed ? "Completed" : "Not completed yet" %></p>

    <button type="button" class="btn btn-primary open-btn-modal-routine" data-toggle="modal" data-target="#exampleModal"
            data-title='<%= @routine_night.exercise.title %>' data-directions='<%= @routine_night.exercise.directions %>' data-duration='<%= @routine_night.duration %>'
            data-sound="<%= asset_url('sounds/exercise1.wav') %>">
      Open
    </button>

  <% else %>
    <p>No routine, sorry!</p>
  <% end %>


</div>

<%= render 'shared/navbar_footer' %>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <h2 id="title-in-modal"></h2>
      <div id="play-btn-modal-div">
        <button class="btn btn-primary btn-lg">
          Play
        </button>
      </div>
      <ul id="directions-list-in-modal">
      </ul>
    </div>
  </div>
</div>
