<div class="background background-mobile" style="background-image: url(<%= image_url 'backgrounds/mobile-form-background.svg' %>)">
  <div class="container">

  <div class="banner-mobile">
    <%= link_to root_path, class: "blink-header no-decoration" do %>
        <h1 class="blink-name mb-0 no-decoration">BLINK</h1>
        <%= image_tag (image_url('logo-blink.svg')), class:"blink-logo no-decoration" %>
    <% end %>
  </div>

  <div class="mobile-sign-out">
    <div class="title-underlined">
      <%= link_to "LOGIN", new_user_session_path, class: "title link-in-mobile-banner" %>
    </div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs container" id="SignupFormMobile">
      <%= f.input :first_name,
              label: false,
              required: true,
              placeholder: 'FIRST NAME' %>
      <%= f.input :city,
                  input_html: { id:"city-input", placeholder: 'CITY' },
                  label: false,
                  required: true %>
      <%= f.input :email,
                  label: false,
                  required: true,
                  input_html: { autocomplete: "email", placeholder: 'EMAIL' } %>
      <%= f.input :password,
                  label: false,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", placeholder: 'PASSWORD' } %>
      <%= f.input :password_confirmation,
                  label: false,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: "CONFIRM PASSWORD" } %>
    </div>

  <div class="text-center">
    <div class="form-actions desk-button button btn btn-outline-success text-center" id="signup-mobile">
      <%= f.button :submit, "SIGN UP", class: "orange-text" %>
    </div>
  </div>
  <% end %>
</div>

