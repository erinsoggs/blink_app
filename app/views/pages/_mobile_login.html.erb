<div class="background background-mobile" style="background-image: url(<%= image_url 'backgrounds/mobile-form-background.svg' %>)">

  <div class="container">

    <div class="banner-mobile">
      <%= link_to root_path, class: "blink-header no-decoration" do %>
          <h1 class="blink-name mb-0 no-decoration">BLINK</h1>
          <%= image_tag (image_url('logo-blink.svg')), class:"blink-logo no-decoration" %>
      <% end %>
    </div>

    <div class="mobile-sign-out">
      <div class="title-underlined">
        <%= link_to "SIGN UP", new_user_registration_path, class: "title" %>
      </div>
    </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs container loginFormMobile" id="loginForm">

      <%= f.input :email,
                  label: false,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", placeholder: 'EMAIL' } %>
      <%= f.input :password,
                  label: false,
                  required: false,
                  input_html: { autocomplete: "current-password", placeholder: 'PASSWORD' } %>
                  <br><br>
      <div style="margin: 0 21%">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
  <div class="text-center">
    <div class="form-actions desk-button button btn btn-outline-success mb-3 text-center">
      <%= f.button :submit, "Log in" %>
    </div>
  </div>
  <% end %>


  </div>
</div>
