<div style="width: 100vw; height: 100vh; background-image: url(<%= image_url 'backgrounds/navbarpagesbacks.svg' %>); background-repeat: no-repeat;">

  <div class="container container-blink">

    <%= render 'shared/banner_mobile' %>

    <div class="title-underlined">
      <h2 class="title">RESOURCES</h2>
    </div>

    <div class="card-blink">

      <div class="card-blink-content">

        <div class="card-blink-infos">
          <h2>Why Blink?</h2>
          <p> Learn why our devices can cause dry eyes.</p>
        </div>

      </div>


      <div type="button" class="card-blink-footer" data-toggle="modal" data-target="#exampleModal"
            onclick="window.fillInModalResource('Why Blink?')">
        Read Article
      </div>

    </div>

    <div class="card-blink">

      <div class="card-blink-content">

        <div class="card-blink-infos">
          <h2>Tips For Great Eye Hygiene!</h2>
          <p> Learn how to take care of your eyes and reduce dry eye symptoms.</p>
        </div>

      </div>


      <div type="button" class="card-blink-footer" data-toggle="modal" data-target="#exampleModal"
            onclick="window.fillInModalResource('Tips For Great Eye Hygiene!')">
        Read Article
      </div>

    </div>

    <div class="modal fade modal-blink resource" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <h1 id="resource-title-in-modal"></h1>
          <p id="resource-content-in-modal"></p>
        </div>
      </div>
    </div>

  </div>

  <%= render 'shared/footer' %>

</div>
